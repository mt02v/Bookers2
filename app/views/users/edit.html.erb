<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors happened
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= image_tag @user.get_profile_image, size:"100x100" %>
      <%= form_with model: @user do |f| %>
        <label for = "inputName">Name</label><br/>
        <%= f.text_field :name, autofocus: true, id:"inputName" %><br/>
        <label for = "inputImage">Image</label><br/>
        <%= f.file_field :profile_image, accept: "image/*" %><br/>
        <label for = "inputIntroduction">Introduction</label><br/>
        <%= f.text_area :introduction %><br/>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>