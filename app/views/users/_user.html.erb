<h2>User info</h2>
<table class = "table">
  <tbody>
    <%= image_tag user.get_profile_image, size:"100x100" %>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

  <%= link_to edit_user_path(user.id) do %>
   <div class = "btn btn-outline-secondary btn-block"> <i class="fas fa-user-cog"></i></div>
  <% end %>
